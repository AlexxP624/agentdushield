<%- include("partials/header") %>

<title>Documentation | <%= bot.user.username %></title>

<div class="container text-center text-light" style="padding-top: 110px; padding-bottom: 20px;">
    <% if (user) { %>
        <img class="img-fluid rounded" src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>" width="128px" height="auto">
        <br>
        <br>
        <h1>salam, <%= user.username %>!</h1>
        <p>Où voulez-vous allez ?</p>   
        <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
            <a href="/dashboard/servers" type="button" class="btn btn-primary"><i class="fas fa-server"></i> | Mes Servers</a>
            <a href="/dashboard/profile" type="button" class="btn btn-success"><i class="fas fa-id-card"></i> | Mon Profile</a>
            <a href="/logout" type="button" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i> | Déconnexion</a>
        </div>
    <% } else { %>
        <img class="img-fluid rounded" src="<%= bot.user.displayAvatarURL({dynamic: true, size: 128}) %>" width="128px" height="auto">
        <br>
        <br>
        <h1><%= bot.user.username %> Dashboard</h1>
        <p>Cliquez ci-dessous pour vous connecter.</p>   
        <a href="/login" type="button" class="btn btn-light"><i class="fab fa-discord"></i> | Se Connecter Avec Discord</a>
    <% } %>
</div>

<!-- if you would like to add a footer, use: include("partials/footer") like the header one at the top of the code. -->
